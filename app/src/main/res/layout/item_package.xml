<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/package_name"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textStyle="bold"
            tools:text="Package S001" />

        <ImageView
            android:id="@+id/package_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/package_name"
            android:layout_alignBottom="@+id/package_name"
            android:layout_toEndOf="@+id/package_name"
            android:layout_toRightOf="@+id/package_name"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:contentDescription="@string/star_package_active_or_not"
            android:src="@drawable/ic_toggle_star_24" />

        <TextView
            android:id="@+id/package_type"
            tools:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/package_name"
            android:layout_alignBottom="@+id/package_name"
            android:layout_toEndOf="@+id/package_active"
            android:layout_toRightOf="@+id/package_active"
            android:gravity="center" />

        <TextView
            android:id="@+id/package_location"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/package_name"
            tools:text="Berlin, UK" />

    </RelativeLayout>

</android.support.v7.widget.CardView>